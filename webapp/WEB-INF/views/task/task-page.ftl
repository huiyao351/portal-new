<!-- 翻页 -->
<div class="laypage_main laypageskin_default pagination PagingCombination tablePagination taskPagination">
    <ul>
        <!-- 设置显示条数 当前一页显示（1280×800）6条、8条（1920×1080）10条 、14条 -->
        <li><span style="margin:0px; padding:0px;">当前一页显示：</span>
        </li>
        <li class="select-box" style="width:80px;">
            <select class="select taskListPageSize" size="1" name="taskListPageSize" id="taskListPageSize">
                <option value="6" selected="">6条</option>
                <option value="8">8条</option>
                <option value="10">10条</option>
                <option value="14">14条</option>
                <option value="20">20条</option>
            </select>
        </li>
        <!--end  设置显示条数 -->
        <li><a href="#" class="button firstPage laypage_first">&lt;&lt;</a></li>
        <li><a href="#" class="button prePage laypage_prev"> &lt; </a></li>
        <li><span>当前第</span>
            <input class="ui-pg-input currentPage" type="text" size="2" maxlength="7" value="0" role="textbox" style="border:0px;border: 1px solid #ccc">
            <span> 页， 共</span>
            <input class="totalPage" type="text" size="2" maxlength="7" value="0" role="textbox" readonly style="border:0px;"><span>页，共</span>
            <input class="recordCount" type="text" size="2" maxlength="7" value="0" role="textbox" readonly style="border:0px;"><span>条</span>
        </li>
        <li><a href="#" class="button nextPage laypage_next"> &gt; </a></li>
        <li><a href="#" class="button lastPage laypage_last">&gt;&gt;</a></li>
    </ul>
</div>
<!--end 翻页 -->
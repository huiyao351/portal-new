<h4 class="titleLab">
    <i class="icon-info-sign"></i> 业务属性
</h4>
<div style="padding-right:10px;">
    <form method="post" class="row cl form-horizontal" id="bsForm">
        <input type="hidden" id="businessId" name="businessId">
        <input type="hidden" id="bs_treeTId" name="treeTId">

        <div class="row cl form-element">
            <div class="col-2 form-label">
                业务名称
            </div>
            <div class="col-4 form-input">
                <input name="businessName" id="bs_businessName" type="text" class="input-text size-M" >
            </div>
            <div class="col-2 form-label">
                业务代码
            </div>
            <div class="col-4 form-input">
                <input id="businessCode" name="businessCode" type="text" class="input-text size-M">
            </div>
        </div>
        <div class="row cl form-element">
            <div class="col-2 form-label">
                数据库类型
            </div>
            <div class="col-4 form-input">
                <select class="select" id="datasourceType" name="datasourceType">
                <#list databaseList as item>
                    <option value="${item.value}">${item.name}</option>
                </#list>
                </select>
            </div>
            <div class="col-2 form-label">
                业务编号
            </div>
            <div class="col-4 form-input">
                <input id="businessNo" name="businessNo" type="text" class="input-text size-M">
            </div>
        </div>
        <div class="row cl form-element">
            <div class="col-2 form-label">
                数据库URL
            </div>
            <div class="col-10 form-input">
                <input id="datasourceUrl" name="datasourceUrl" type="text" class="input-text size-M">
            </div>
        </div>
        <div class="row cl form-element">
            <div class="col-2 form-label">
                用户名
            </div>
            <div class="col-4 form-input">
                <input id="datasourceUser" name="datasourceUser" type="text" class="input-text size-M">
            </div>
            <div class="col-2 form-label">
                密码
            </div>
            <div class="col-4 form-input">
                <input id="datasourcePass" name="datasourcePass" type="password" class="input-text size-M">
            </div>
        </div>
        <div class="row cl form-element">
            <div class="col-2 form-label">
                URL
            </div>
            <div class="col-10 form-input">
                <input id="businessUrl" name="businessUrl" type="text" class="input-text size-M">
            </div>
        </div>
        <div class="row cl form-element">
            <div class="col-2 form-label">
                备注
            </div>
            <div class="col-10 form-textarea">
                <textarea id="bs_remark" name="remark" style="height:80px;" ></textarea>
            </div>
        </div>
        <div class="row cl pd-10" style="text-align:center;">
            <button class="btn btn-secondary size-M" type="button" id="bsBtn">
                <i class="icon-save icon-large"></i> 保存
            </button>
        </div>
    </form>
</div>